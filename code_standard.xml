<?xml version="1.0"?>
<ruleset name="rokka-wordpress-plugin-vmStandard">
 <description>The rokka-wordpress-plugin-vm-specific coding standard (fully includes WordPress rules).</description>

    <!-- Include the whole PSR-2 standard -->
    <rule ref="WordPress">
        <exclude name="WordPress.Files.FileName" />
        <exclude name="WordPress.CSRF.NonceVerification" />
        <exclude name="WordPress.VIP.ValidatedSanitizedInput" />
        <exclude name="WordPress.VIP.RestrictedFunctions" />
        <exclude name="WordPress.VIP.SuperGlobalInputUsage" />
        <exclude name="Squiz.Commenting.InlineComment" />
        <exclude name="Squiz.Commenting.BlockComment" />
    </rule>
    <rule ref="Internal.NoCodeFound">
        <severity>0</severity>
    </rule>
    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent">
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/404.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/_missing_translations.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/archive*.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/index.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/front-page.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/single*.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/page.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/header.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/taxonomy.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/footer.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/partials/*</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/templates/*</exclude-pattern>
    </rule>
    <rule ref="Squiz.Commenting.FileComment">
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/404.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/_missing_translations.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/functions.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/archive*.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/index.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/front-page.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/single*.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/page.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/header.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/taxonomy.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/footer.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/partials/*</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/templates/*</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/assets/php/*</exclude-pattern>
    </rule>
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/404.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/_missing_translations.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/archive*.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/index.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/front-page.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/single*.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/page.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/header.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/taxonomy.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/footer.php</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/partials/*</exclude-pattern>
        <exclude-pattern>*/themes/rokka-wordpress-plugin-vm/templates/*</exclude-pattern>
    </rule>


</ruleset>
